<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_15sdp"
    android:layout_marginEnd="@dimen/_15sdp"
    android:layout_marginBottom="@dimen/_15sdp"
    android:foreground="?selectableItemBackgroundBorderless"
    app:cardBackgroundColor="@color/nav_head_bg"
    app:cardCornerRadius="@dimen/_8sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="@dimen/_15sdp"
            android:background="@color/white"
            android:paddingEnd="@dimen/_15sdp">

            <TextView
                android:id="@+id/package_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/colourBlue"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                tools:text="Action Ultra" />

            <TextView
                android:id="@+id/package_validity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_5sdp"
                android:textColor="@color/grey_40"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_baseline_check_24"
                tools:text="For 30 days" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:background="@color/colorGold"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/_25sdp"
            android:paddingBottom="@dimen/_25sdp">

            <com.romainpiel.shimmer.ShimmerTextView
                android:id="@+id/package_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vag_rounded_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_25ssp"
                android:textStyle="bold"
                tools:text="$29" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/curved_gold_bg"
                android:backgroundTint="@color/white"
                android:paddingStart="@dimen/_15sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:text="@string/buy"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>